<h1 class="text-center">Athletics</h1>
<hr>
<div class="container text-center">
	<div class="row">
		{{#each products}}
			{{#unless this.Purchased}}

		<div class="col-md-3">
			<div class="well well-lg">

				{{this.productname}}
                <a href='/item/{{this.id}}'><img class="images image-responsive" src={{this.imageurl}}></a>
                <form action="/index?_method=PUT" method="POST">
                    <input class="form-control" type="hidden" name="productname">
                </form>

			</div>
		</div>
			{{/unless}}
		{{/each}}
	</div>
</div>
