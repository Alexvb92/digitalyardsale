<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title"><strong>User Information</strong></h3>
			    </div>
			    <div class="panel-body">
				    <div id="userinfo">
		  			<!-- Train Data will be here -->
		  				<table class="table table-striped">
		  					<thead>
		  						<th>Name</th>
		  						<th>Email</th>
		  						<th>Balance</th>
		  					</thead>
		  					<tbody>
		  					<tr>
		  						<td>{{this.username}}</td>
		  						<td>{{this.useremail}}</td>
								{{#each user}}
								{{#if this.username}}
		  						<td>$ {{this.money}}</td>
		  						{{/if}}
		  						{{/each}}
		  					</tr>
		  					</tbody>
		  				</table>
		  			</div>
				</div>
			</div>
		</div>
	</div>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title"><strong>Items Purchased</strong></h3>
	    </div>
	    <div class="panel-body">
		    <div id="itemsPurchased">
  			<!-- Train Data will be here -->
  				<table class="table table-striped">
  					<thead>
  						<th>Product Name</th>
  						<th>Price</th>
  						<th>Location</th>
  						<th>Category</th>
  						<th>Image</th>
  					</thead>
  					<tbody>
  					{{#each products}}
  					{{#if this.user_id}}
					<tr>
						<td>{{this.productname}}</td>
						<td>{{this.price}}</td>
						<td>{{this.location}}</td>
						<td>{{this.departmentname}}</td>
						<td><image class="images" src={{this.imageurl}}></td>
					</tr>
  					{{/if}}
  					{{/each}}
  					</tbody>
  				</table>
  			</div>
		</div>
	</div>
</div>